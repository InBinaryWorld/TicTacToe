<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/tic_tac_toe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:autoSizeTextType="uniform" app:layout_constraintTop_toTopOf="parent"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:layout_weight="1">
            <Button
                    android:id="@+id/btn1" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn2" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn3" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn4" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn5" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:layout_weight="1">
            <Button
                    android:id="@+id/btn6" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn7" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn8" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn9" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn10" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:layout_weight="1">
            <Button
                    android:id="@+id/btn11" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn12" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn13" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn14" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn15" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:layout_weight="1">
            <Button
                    android:id="@+id/btn16" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn17" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn18" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
