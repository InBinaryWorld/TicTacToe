                    android:id="@+id/btn19" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn20" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:layout_weight="1">
            <Button
                    android:id="@+id/btn21" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn22" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn23" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn24" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <Button
                    android:id="@+id/btn25" app:autoSizeTextType="uniform"
                    tools:ignore="ButtonStyle" android:onClick="onAction" android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">
        <TextView
                android:text="@string/player_1" app:autoSizeTextType="uniform"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:layout_weight="3"/>
        <Button
                android:text="@string/new_game"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:autoSizeTextType="uniform"
                android:id="@+id/button"
                app:layout_constraintStart_toEndOf="@+id/textView2" android:onClick="newGame"
                android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>